<div class="form-group">
	<%= f.label :quotation_no, "Quotation#", class: "col-md-2 control-label" %>
	<div class="col-sm-10">
		<%= f.text_field :quotation_no, class: "form-control", placeholder: "QO20150325-001"  %>		
	</div>
</div>
<div class="form-group">
	<%= f.label :quotation_date, "Quotation Date", class: "col-md-2 control-label" %>
	<div class="col-xs-4 ">
		<%= f.date_select :quotation_date, {}, {:class => "col-sm-1 form-control" }%>
	</div>
</div>
<div class="form-group">
	<%= f.label :customer, "Customer", class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.text_field :customer, class: "form-control" %>
	</div>
</div>
<div class="form-group">
	<%= f.label :customer_factory, "Customer Factory", class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.text_field :customer_factory, class: "form-control" %>
	</div>
</div>
<div class="form-group">
	<table class="table table-striped">
		<thead>
			<tr>
				<th class="col-md-1">#</th>
				<th class="col-md-2">Customer Part#</th>
				<th class="col-md-2">Quantity</th>
				<th class="col-md-2">Unit Price</th>
				<th class="col-md-2">Total</th>
			</tr>
		</thead>
		<tbody>
			<% f.fields_for :quotationDs do |quotationD| %>
				<tr>
					<td><%= quotationD.index%></td>
					<td><%= quotationD.text_field :customer_part_no, class: "form-control" %></td>
					<td><%= quotationD.text_field :quantity, class: "form-control" %></td>
					<td><%= quotationD.text_field :unit_price, class: "form-control" %></td>
					<td></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>		
<div class="form-group">
	<%= f.label :shipment, "Shipment", class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.text_field :shipment, class: "form-control" %>
	</div>
</div>
<div class="form-group">
	<%= f.label :payment, "Payment", class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.text_field :payment, class: "form-control" %>
	</div>
</div>